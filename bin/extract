#!/usr/bin/env bash

# Extract archives of various types
# USAGE: extract <FILE>

if [ -f $1 ] ; then
  local dir_name=${1%.*}  # Filename without extension
  case $1 in
    *.tar.bz2)  tar xjf           $1 ;;
    *.tar.gz)   tar xzf           $1 ;;
    *.tar.xz)   tar Jxvf          $1 ;;
    *.tar)      tar xf            $1 ;;
    *.tbz2)     tar xjf           $1 ;;
    *.tgz)      tar xzf           $1 ;;
    *.bz2)      bunzip2           $1 ;;
    *.rar)      unrar x           $1 $2 ;;
    *.gz)       gunzip            $1 ;;
    *.zip)      unzip -d$dir_name $1 ;;
    *.Z)        uncompress        $1 ;;
    *)          echo "'$1' cannot be extracted via extract()" ;;
  esac
else
  echo "'$1' is not a valid file"
fi
