# EditorConfig
# https://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

[*.{zsh,sh,bash,js,json}]
trim_trailing_whitespace = true
insert_final_newline = true

# 4 space indentation
[*.py]
trim_trailing_whitespace = true
insert_final_newline = true
